    print("\nTo-Do List:")
    for idx, task in enumerate(tasks, start=1):
        due_date = datetime.fromisoformat(task["due_date"])
        print(f"{idx}. {task['task']} - Due: {due_date} - Priority: {task['priority']}")

def save_tasks():
    with open("tasks.json", "w") as file:
        json.dump(tasks, file)

def load_tasks():
    global tasks
    try:
        with open("tasks.json", "r") as file:
            tasks = json.load(file)
    except FileNotFoundError:
        tasks = []

def edit_task(task_number, new_task=None, new_due_date=None, new_priority=None):
    if 0 < task_number <= len(tasks):
        if new_task:
            tasks[task_number - 1]["task"] = new_task
        if new_due_date:
            tasks[task_number - 1]["due_date"] = new_due_date.isoformat()
        if new_priority:
            tasks[task_number - 1]["priority"] = new_priority
        save_tasks()
        print(f"Task {task_number} updated!")
    else:
        print("Invalid task number.")

