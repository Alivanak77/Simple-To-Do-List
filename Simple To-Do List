import json
from datetime import datetime

tasks = []

def add_task(task, due_date, priority="Medium", status="Incomplete"):
    tasks.append({
        "task": task,
        "due_date": due_date.isoformat(),
        "priority": priority,
        "status": status
    })
    save_tasks()

def show_tasks(status_filter=None):
    print("\nTo-Do List:")
    filtered_tasks = [t for t in tasks if status_filter is None or t["status"] == status_filter]
    for idx, task in enumerate(filtered_tasks, start=1):
        due_date = datetime.fromisoformat(task["due_date"])
        print(f"{idx}. {task['task']} - Due: {due_date} - Priority: {task['priority']} - Status: {task['status']}")

