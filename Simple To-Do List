    print(f"Added: {task} (Due: {due_date})")

def show_tasks():
    if not tasks:
        print("\nTo-Do List is empty!")
        return
    print("\nTo-Do List (Sorted by Due Date):")
    for idx, (task, due_date) in enumerate(tasks, start=1):
        print(f"{idx}. {task} - Due: {due_date}")

