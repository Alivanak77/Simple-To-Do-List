# Simple To-Do List - Day 2

tasks = []

def add_task(task):
    tasks.append(task)
    print(f"Added: {task}")

def show_tasks():
    if not tasks:
        print("\nTo-Do List is empty!")
        return

    print("\nTo-Do List:")
    for idx, task in enumerate(tasks, start=1):
        print(f"{idx}. {task}")

def remove_task(index):
    try:
        index = int(index) - 1
        if 0 <= index < len(tasks):
            removed = tasks.pop(index)
